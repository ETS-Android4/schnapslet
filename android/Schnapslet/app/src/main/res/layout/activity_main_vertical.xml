<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/imOut1"
            android:contentDescription="@string/imOut1_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:minWidth="72dp"
            android:minHeight="96dp"
            android:src="@drawable/leer"
            />
        <ImageView
            android:id="@+id/imOut0"
            android:contentDescription="@string/imOut0_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/leer"
            android:minWidth="72dp"
            android:minHeight="96dp"
            />

        <ImageView
            android:id="@+id/imMerge"
            android:contentDescription="@string/imMerge_text"
            android:layout_width="144dp"
            android:layout_height="96dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="0dp"
            android:minWidth="144dp"
            android:minHeight="96dp"
            android:visibility="visible"
            android:src="@drawable/anim_merge" />

        <ImageView
            android:id="@+id/imAtou"
            android:contentDescription="@string/imAtou_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="256dp"
            android:layout_marginTop="0dp"
            android:minWidth="72dp"
            android:minHeight="96dp"
            android:src="@drawable/n0"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/imTalon"
            android:contentDescription="@string/imTalon_text"
            android:layout_width="96dp"
            android:layout_height="72dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="14dp"
            android:minWidth="96dp"
            android:minHeight="72dp"
            android:src="@drawable/t"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/im0"
            android:contentDescription="@string/im0_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/n0"
            android:minWidth="72dp"
            android:minHeight="96dp"
            />
        <ImageView
            android:id="@+id/im1"
            android:contentDescription="@string/im1_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/n0"
            android:minWidth="72dp"
            android:minHeight="96dp"
            />
        <ImageView
            android:id="@+id/im2"
            android:contentDescription="@string/im2_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/n0"
            android:minWidth="72dp"
            android:minHeight="96dp"
            />
        <ImageView
            android:id="@+id/im3"
            android:contentDescription="@string/im3_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/n0"
            android:minWidth="72dp"
            android:minHeight="96dp"
            />
        <ImageView
            android:id="@+id/im4"
            android:contentDescription="@string/im4_text"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="264dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/n0"
            android:minWidth="72dp"
            android:minHeight="96dp"
            />

        <TextView
            android:id="@+id/tMes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="24dp"
            android:minWidth="340dp"
            android:text="@string/tMes_text"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="200dp"
            />

        <Button
            android:id="@+id/b20a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b20a_text"
            android:enabled="false"
            android:layout_marginLeft="372dp"
            android:layout_marginTop="0dp"
            android:minWidth="96dp"
            android:minHeight="24dp"
            android:textSize="10sp"
            />
        <Button
            android:id="@+id/b20b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b20b_text"
            android:enabled="false"
            android:layout_marginLeft="372dp"
            android:layout_marginTop="24dp"
            android:minWidth="96dp"
            android:minHeight="24dp"
            android:textSize="10sp"
            />
        <Button
            android:id="@+id/bChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bChange_text"
            android:enabled="false"
            android:layout_marginLeft="372dp"
            android:layout_marginTop="48dp"
            android:minWidth="96dp"
            android:minHeight="24dp"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tRest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tRest_text"
            android:layout_marginLeft="384dp"
            android:layout_marginTop="80dp"
            android:minHeight="24dp"
            android:minWidth="384dp"
            />
        <TextView
            android:id="@+id/tPoints"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tPoints_text"
            android:layout_marginLeft="444dp"
            android:layout_marginTop="80dp"
            android:minHeight="48dp"
            android:minWidth="24dp"
            />

        <Button
            android:id="@+id/bContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bContinue_text"
            android:enabled="false"
            android:layout_marginLeft="372dp"
            android:layout_marginTop="104dp"
            android:minWidth="96dp"
            android:minHeight="24dp"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tDbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="250dp"
            android:minWidth="340dp"
            android:minHeight="108dp"
            android:text="@string/tDbg_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>